body{
    font-family: "Helvetica Neue",
    Arial,
    "Hiragino Kaku Gothic ProN",
    "Hiragino Sans",
    Meiryo,
    sans-serif;
    margin:0;
    padding:0;
    color:#FFFFFF;
    text-align:center;
    text-decoration: none;
    background-image:url("<%= asset_path('boy-1846310_1280.jpg') %>");
    /* 画像を常に天地左右の中央に配置 */
    background-position: center center;
    /* 画像をタイル状に繰り返し表示しない */
    background-repeat: no-repeat;
    /* コンテンツの高さが画像の高さより大きい時、動かないように固定 */
    background-attachment: fixed;
    /* 表示するコンテナの大きさに基づいて、背景画像を調整 */
    background-size: cover;
}

.picture{
    max-width:60%;
}

.form{
    background-color:#FFFFFF;
    color:#000000;
    border-radius:10px;
    padding:50px;
}

.frame{
    background-color:#FFFFFF;
    color:#000000;
}

.hover_mouse{
    background-color:pink;
}

html,body{
    height: 100%;
}
.container{
    position: relative;
    min-height: 100%;
    height: auto !important;
    height: 100%;
}
main{
    padding-bottom: 50px
}

.footer{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 50px;
}