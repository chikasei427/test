<h2 class="mb-2 text-white"><i class="fas fa-user"></i>User details</h2>
<div class="row">
  <table class="table-light my-table w-100">
    <tr>
      <td colspan="2" class="bg-primary"><div class="text-center"><span class="text-white">Name:  <%= @photographer.name %></span></div></td>
    </tr>
    <tr>
      <td class="w-50"><a href="<%= photographer_path %>" class="nav-link <%= 'active' if current_page?(photographer_path(@photographer)) %>">The Work  <span class="badge badge-secondary"><%= @photographer.posts.size %></span></a></td>
      <td class="w-50"><a href="<%= favorittings_photographer_path %>" class="nav-link <%= 'active' if current_page?(favorittings_photographer_path(@photographer)) %>">Favorite Work  <span class="badge badge-secondary"><%= @photographer.favorites.size %></span></a></td>
    </tr>
    <% @favorites_row.each do |row| %>
      <tr>
        <% row.each do |favorite| %>
          <td class="bg-dark text-center"><%= link_to 'Title:  ' + favorite.post.title, post_path(favorite.post.id), class:'text-white' %></td>
          <% if row.size % 2 != 0 %>
            <td></td>
          <% end %>
        <% end%>
      </tr>
      <tr>
        <% row.each do |favorite| %>
          <% image = image_tag favorite.post.picture.url, class: 'picture'%>
          <td><div class="text-center"><%= link_to image, post_path(favorite.post.id) %></div></td>
            <% if row.size % 2 != 0 %>
              <td></td>
            <% end %>
        <% end%>
      </tr>
      <tr>
        <% row.each do |favorite| %>
          <td class="bg-info text-center"><%= link_to "Author:  " + favorite.post.photographer.name, photographer_path(favorite.post.photographer.id), class:'text-white' %></td>
          <% if row.size % 2 != 0 %>
            <td></td>
          <% end %>
        <% end %>
      </tr>
      <tr>
        <% row.each do |favorite| %>
          <td><div class="text-center"><%= render 'favorites/favorite_button', post: favorite.post %></div></td>
          <% if row.size % 2 != 0 %>
            <td></td>
          <% end %>
        <% end%>
      </tr>
    <% end %>
  </table>
</div>
