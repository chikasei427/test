<h2 class="mb-2 text-white"><i class="fas fa-user"></i>User details</h2>
<div class="row">
  <table class="table-light my-table w-100">
    <tr>
      <td colspan="2" class="bg-primary"><div class="text-center text-white">Name:  <%= @photographer.name %></div></td>
    </tr>
    <tr>
      <td class="w-50"><div class="text-center"><a href="<%= photographer_path %>" class="nav-link active"><span class="text-white">The Work</span><span class="badge badge-secondary"><%= @photographer.posts.size %></span></a></div></td>
      <td class="w-50"><div class="text-center"><a href="<%= favorittings_photographer_path %>" class="nav-link <%= 'active' if current_page?(favorittings_photographer_path(@photographer)) %>">Favorite Work  <span class="badge badge-secondary"><%= @photographer.favorites.size %></span></a></div></td>
    </tr>
    <% @posts_row.each do |row| %>
    <tr>
      <% row.each do |post| %>
        <td class="bg-dark"><div class="text-center text-white">Title:  <%= post.title %></div></td>
        <% if row.size % 2 != 0 %>
          <td></td>
        <% end %>
      <% end%>
    </tr>
      <tr>
        <% row.each do |post| %>
          <% image = image_tag post.picture.url, class: 'picture'%>
          <td><div class="text-center"><%= link_to image, post_path(post.id) %></div></td>
          <% if row.size % 2 != 0 %>
            <td></td>
          <% end %>
        <% end%>
      </tr>
      <tr>
        <% row.each do |post| %>
          <td><div class="text-center"><%= render 'favorites/favorite_button', post: post %></div></td>
          <% if row.size % 2 != 0 %>
            <td></td>
          <% end %>
        <% end%>
      </tr>
    <% end %>
  </table>
</div>