<h2 class="mb-2 text-white"><i class="fas fa-sign-in-alt"></i>ログイン</h2>
<div class="row">
  <div class="col-lg-6 offset-lg-3 form">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control fa', :placeholder => "\uf0e0メールアドレス" %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control fa', :placeholder => "\uf084パスワード" %>
      </div>

      <%= f.submit 'ログイン', class: 'btn btn-primary btn-block' %>
    <% end %>
    <br>
    <p><%= link_to '新規登録', signup_path, class: 'btn btn-success' %></p>
  </div>
</div>